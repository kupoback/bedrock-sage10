{
    "name": "roots/bedrock",
    "type": "project",
    "license": "MIT",
    "description": "WordPress boilerplate with modern development tools, easier configuration, and an improved folder structure",
    "homepage": "https://roots.io/bedrock/",
    "authors": [
        {
            "name": "Scott Walkinshaw",
            "email": "scott.walkinshaw@gmail.com",
            "homepage": "https://github.com/swalkinshaw"
        },
        {
            "name": "Ben Word",
            "email": "ben@benword.com",
            "homepage": "https://github.com/retlehs"
        }
    ],
    "keywords": [
        "bedrock",
        "composer",
        "roots",
        "wordpress",
        "wp",
        "wp-config"
    ],
    "support": {
        "issues": "https://github.com/roots/bedrock/issues",
        "forum": "https://discourse.roots.io/category/bedrock"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        },
        {
            "type": "composer",
            "url": "https://prod.bedrock.cliquedomains.com/satispress/"
        }
    ],
    "require": {
        "php": ">=7.4",
        "composer/installers": "^1.8",
        "vlucas/phpdotenv": "^5.2",
        "oscarotero/env": "^2.1",
        "roots/bedrock-autoloader": "^1.0",
        "roots/wordpress": "^5.5",
        "roots/wp-config": "1.0.0",
        "roots/wp-password-bcrypt": "1.0.0",
        "cedaro/satispress": "^0.5",
        "clique-bedrock/advanced-custom-fields-pro": "5.*",
        "clique-bedrock/gravityforms": "2.*",
        "clique-bedrock/updraftplus": "2.*",
        "wpackagist-plugin/all-in-one-wp-security-and-firewall": "^4.4",
        "wpackagist-plugin/classic-editor": "^1.5",
        "wpackagist-plugin/cookie-notice": "^1.2",
        "wpackagist-plugin/gravity-forms-wcag-20-form-fields": "^1.7",
        "wpackagist-plugin/mainwp-child": "^4.1",
        "wpackagist-plugin/mainwp-child-reports": "^2.0",
        "wpackagist-plugin/optimus": "^1.6",
        "wpackagist-plugin/redirection": "^4.4",
        "wpackagist-plugin/safe-svg": "^1.9",
        "wpackagist-plugin/stream": "^3.4",
        "wpackagist-plugin/w3-total-cache": "^0.15.2",
        "wpackagist-plugin/wordfence": "^7.4",
        "wpackagist-plugin/wordpress-seo": "^15",
        "wpackagist-plugin/wp-accessibility": "^1.6",
        "wpackagist-plugin/wp-rest-cache": "^2020.3"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.5",
        "roave/security-advisories": "dev-master"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "installer-paths": {
            "web/app/mu-plugins/{$name}/": [
                "type:wordpress-muplugin"
            ],
            "web/app/plugins/{$name}/": [
                "type:wordpress-plugin"
            ],
            "web/app/themes/{$name}/": [
                "type:wordpress-theme"
            ]
        },
        "wordpress-install-dir": "web/wp"
    },
    "scripts": {
        "post-update-cmd": [
            "@remove-default"
        ],
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\"",
            "@remove-default"
        ],
        "test": [
            "phpcs"
        ],
        "remove-default": [
            "rm -rf web/app/themes/twenty*",
            "rm -rf web/wp/wp-content/themes/*",
            "rm -f web/wp/wp-content/plugins/hello.php"
        ],
        "reset-plugins": "rm -rf web/app/plugins",
        "reset-wp-core": "rm -rf web/wp",
        "reset-db": "cd web && wp db drop --yes && wp db create && wp db import mysql.sql && cd ../",
        "db-save": "cd web && wp db export mysql.sql && cd ../"
    },
    "scripts-descriptions": {
        "post-root-package-install": "Symlink webserver configuration & content directories",
        "reset-default": "Removes all the installed default themes",
        "reset-plugins": "Remove all installed plugins"
    }
}
