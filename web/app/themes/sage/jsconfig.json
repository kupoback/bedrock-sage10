{
    "extends": "@roots/sage/config/jsconfig.json",
    "compilerOptions": {
        "baseUrl": "resources",
        "paths": {
            "@fonts/*": ["fonts/*"],
            "@images/*": ["images/*"],
            "@scripts/*": ["scripts/*"],
            "@styles/*": ["styles/*"],
            "@sageAdmin/*": ["admin_assets/**/*"],
            "@sageReact/*": ["react/app.js"],
            "@sageRedux/*": ["react/Redux/**/*"],
            "@reactComponent/*": ["react/Components/**/*"],
            "@reactPages/*": ["react/Pages/**/*"],
            "@reactUtil/*": ["react/Util/**/*"],
            "@sageVue/*": ["vue/app.js"],
            "@vueComponents/*": ["vue/Components/**/*"],
            "@vuePages/*": ["vue/Pages/**/*"],
            "@vueUtil/*": ["vue/Util/**/*"],
            "@sageVuex/*": ["vue/Vuex/**/*"]
        },
        "types": [
            "@roots/bud",
            "@roots/bud-react",
            "@roots/bud-postcss",
            "@roots/bud-sass",
            "@roots/bud-preset-recommend",
            "@roots/bud-preset-wordpress",
            "@roots/bud-tailwindcss",
            "@roots/bud-wordpress-theme-json",
            "@roots/bud-vue",
            "@roots/sage"
        ]
    },
    "include": ["bud.config.js", "resources"],
    "exclude": ["node_modules", "public"]
}
