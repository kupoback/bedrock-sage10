{
    "extends": "@roots/sage/config/jsconfig.json",
    "compilerOptions": {
        "baseUrl": "resources",
        "paths": {
            "@fonts/*": ["fonts/*"],
            "@images/*": ["images/*"],
            "@scripts/*": ["scripts/*"],
            "@styles/*": ["styles/*"],
            "@sageAdmin/*": ["admin_assets/*"],
            "@sageCommon/*": ["styles/common/*"],
            "@reactBlocks/*": ["react/Blocks/*"],
            "@reactComponent/*": ["react/Components/*"],
            "@reactPages/*": ["react/Pages/*"],
            "@reactUtil/*": ["react/Util/*"],
            "@sageBackend/*": ["scripts/backend/*"],
            "@sageBlocks/*": ["scripts/blocks/*"],
            "@sageModules/*": ["scripts/modules/*"],
            "@sagePages/*": ["scripts/pages/*"],
            "@sagePlugins/*": ["scripts/plugins/*"],
            "@sageReact/*": ["react/app.js"],
            "@zustand/*": ["react/Zustand/*"],
            "@zustandBlog/*": ["react/Zustand/Blog/*"],
            "@zustandPosts/*": ["react/Zustand/Posts/*"],
            "@zustandSearch/*": ["react/Zustand/Search/*"]
        },
        "types": [
            "@roots/bud",
            "@roots/bud-react",
            "@roots/bud-postcss",
            "@roots/bud-sass",
            "@roots/bud-preset-recommend",
            "@roots/bud-preset-wordpress",
            "@roots/bud-tailwindcss",
            "@roots/bud-wordpress-theme-json",
            "@roots/sage"
        ]
    },
    "include": ["bud.config.js", "resources"],
    "exclude": ["node_modules", "public"]
}
